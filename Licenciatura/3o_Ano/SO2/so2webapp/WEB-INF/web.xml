<?xml version="1.0" encoding="iso-8859-1"?>


<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

    <display-name>SO2</display-name>
    <description>
      Exercicios SO2
    </description>

<!-- indicacao das servlets existentes e respectivas classes -->
<!-- (sem isto usar-se-ia a configuracao original, que em geral funciona) -->

 <servlet>
        <servlet-name>loja</servlet-name>
        <servlet-class>so2.web.MyLoja</servlet-class>
 </servlet>


<!-- associar outros URLs a uma servlet -->

    <servlet-mapping>
        <servlet-name>loja</servlet-name>
        <url-pattern>/loja</url-pattern>
	</servlet-mapping>

